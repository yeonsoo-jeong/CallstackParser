<Window x:Class="ShakaCallstackParser.EncWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ShakaCallstackParser"
        mc:Ignorable="d"
        Title="EncWindow" Height="450" Width="800"
        Activated="Window_Activated" Closed="Window_Closed">
    <Grid>
        <ListView x:Name="ListView1" HorizontalAlignment="Left" Height="292" Margin="32,92,0,0" VerticalAlignment="Top" Width="726" Grid.ColumnSpan="2" DragDrop.Drop="ListView1_OnDroped">
            <ListView.Resources>
                <Style TargetType="ListViewItem">
                    <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                </Style>
            </ListView.Resources>
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Num" Width="50">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock TextAlignment="Center" Text="{Binding number}" />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Header="Path" DisplayMemberBinding="{Binding path}" Width="400" />
                    <GridViewColumn Header="Progress" Width="120" >
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <ProgressBar Maximum="100" Height="10" Width="100" Value="{Binding Path=progress}" HorizontalAlignment="Center"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Header="Note" DisplayMemberBinding="{Binding note}" Width="400" />
                </GridView>
            </ListView.View>
        </ListView>
        <Button x:Name="Btn1" Content="Button" HorizontalAlignment="Left" Margin="683,34,0,0" VerticalAlignment="Top" Width="75" Click="Btn1_Click"/>

    </Grid>
</Window>
